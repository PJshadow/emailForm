<!-- Contact form -->
<section id="form" class="bg-body-tertiary shadow-sm" data-aos="fade" data-aos-delay="200">
  <h2 class="text-center pt-5">Contact Us</h2>
  <div class="container pb-5 pt-2">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <form id="quote-form">
          <p class="text-center">Got a question? We’d be happy to help. Reach out to us, and we’ll respond as quickly as
            we can.</p>
