            <div class="col-md-12" class="mb-3">
              <input type="text" name="name" class="form-control" placeholder="Name" required="">
            </div>

            <div class="col-md-12 ">
              <input type="email" class="form-control" name="email" placeholder="Email" required="">
            </div>

            <div class="col-md-12">
              <input type="text" class="form-control" name="phone" placeholder="Phone" required="">
            </div>

            <div class="col-md-12">
              <textarea class="form-control" name="message" rows="6" placeholder="Message" required=""></textarea>
            </div>

            <div class="col-md-12 text-center">
              <div class="loading" style="display: none;">Sending, please wait...</div>
              <div class="error-message" style="display: none;"></div>
              <div class="sent-message" style="display: none;">Your quote request has been sent successfully. Thank you!
              </div>

              <button type="submit" class="btn btn-primary shadow">Get a quote</button>
            </div>

          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<!-- End Contact form -->

<!-- Hire form -->
